<!-- form handling-->
<form action ="/api/users" method = "POST" id="add-user">
    <div class="new_user">
     <div class="form-group">
         <label for="name" class="text-light">Name</label>
         <input type="hidden" name = "id" value="">
         <input type="text" name="name" value="" placeholder="Type your name">

     </div>
     <div class="form-group">
        <label for="email" class="text-light">Email</label>
        <input type="text" name="email" value="" placeholder="example@gmail.com">

    </div>
    <div class="form-group">
        <label for="ftornci" class="text-light">Field Trip or New Class Idea (NCI)</label>
        <div class="radio inline">
            <input type="radio" id="radio-2" name="ftornci" value="Field Trip">
            <label for="radio-2" class="radio-label">Field Trip</label>


        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3" name="ftornci" value="nci">
            <label for="radio-3" class="radio-label">NCI</label>


        </div>
        
    </div>
    <div class="form-group">
        <label for="status" class="text-light">Will you require additional resources?</label>
        <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Yes">
            <label for="radio-4" class="radio-label">Yes</label>


        </div>
        <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="No">
            <label for="radio-5" class="radio-label">No</label>


        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Edit</button>
        </div>
        
    </div>
    </div>
    
</form>