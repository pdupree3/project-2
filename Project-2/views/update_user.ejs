<!-- Main Site -->
<main id="site-main">
    <div class="container">
       <div class=".box-nav.d-flex justify-between">
           <div class = "filter">
               <a href="/"> <i class = "fas fa-abngle-double-left"> All Requests</i></a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"> Edit Request</h2>
            <span class="text-light">Use the below form to edit a request.</span>

        </div>

        <!--add user form-->
<!-- form handling-->
<form method = "POST" id="update_user">
    <div class="new_user">
     <div class="form-group">
         <label for="name" class="text-light">Name</label>
         <input type="hidden" name = "id" value="<%=user._id %>">
         <input type="text" name="name" value="<%=user.name %>" placeholder="type your name">

     </div>
     <div class="form-group">
        <label for="email" class="text-light">Email</label>
        <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">

    </div>
    <div class="form-group">
        <label for="ftornci" class="text-light">Field Trip or New Class Idea (NCI)</label>
        <div class="radio inline">
            <input type="radio" id="radio-2" name="ftornci" value="Field Trip"<%= user.ftornci =='Field Trip'?'checked':''%>>
            <label for="radio-2" class="radio-label">Field Trip</label>


        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3" name="ftornci" value="NCI"<%= user.ftornci =='NCI' ? 'checked':''%>>
            <label for="radio-3" class="radio-label">NCI</label>


        </div>
        
    </div>
    <div class="form-group">
        <label for="status" class="text-light">Will you require additional resources? </label>
        <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Yes" <%= user.status =='Yes' ? 'checked':''%>>
            <label for="radio-4" class="radio-label">Yes</label>


        </div>
        <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="No" <%= user.status =='No' ? 'checked':''%>>
            <label for="radio-5" class="radio-label">No</label>


        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Edit</button>
        </div>
        
    </div>
    </div>
    
</form>    </div>
</main>
<!-- /Main Site -->


